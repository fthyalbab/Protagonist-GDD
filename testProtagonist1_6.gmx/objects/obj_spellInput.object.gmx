            <string>/// handle end-of-cast action
if (action != "")
{
    if ((!instance_exists(first) || !first.active) &amp;&amp; first != noone)
    {
        combatEndCast(targetX, targetY, action);
        first = noone;
    }
    if ((!instance_exists(last) || !last.active) &amp;&amp; last != noone)
